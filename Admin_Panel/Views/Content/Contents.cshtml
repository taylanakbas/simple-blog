@model List<Admin_Panel.Models.ContentModel>
@{
    ViewBag.Title = "Contents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center >
    <div class="content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-xl-6">
                    <h1 class="page-head-line">Posts </h1>
                    <!--    Hover Rows  -->
                    <div class="panel panel-default">

                        <div class="row" style="margin: 0 auto" ;>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Category Name</th>
                                                <th>Title</th>
                                                <th>Author</th>
                                                <th>Date</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.PostId</td>
                                                    <td>@item.CategoryName</td>
                                                    <td>@item.PostTitle</td>
                                                    <td>@item.AuthorName</td>
                                                    <td>@item.Published</td>
                                                    <td>
                                                        @Html.ActionLink("Delete", "DeleteContent", "Content", new { PostId = item.PostId },
    null)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Update", "UpdateContent", "Content", new { PostId = item.PostId },
    null)
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>

