<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <![endif]-->
    <title>Blog Admin Panel</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONT AWESOME ICONS  -->
    <link href="~/Content/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLE  -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <!-- HTML5 Shiv and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="background-color:lavenderblush">
    <header style="color:#1F2640; background-color:#1F2640;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <strong>Email: </strong>info@yourdomain.com
                    &nbsp;&nbsp;
                    <strong>Support: </strong>+90-897-678-44
                </div>

            </div>
        </div>
        <div class="navbar navbar-inverse set-radius-zero" style="color:#1F2640; background-color:#1F2640;" >
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/assets/img/logo2.png" style="height:70px"/>
                    </a>

                </div>
            </div>
        </div>
    </header>
    <!-- HEADER END-->

    <!-- LOGO HEADER END-->
    <section class="menu-section" style="color:#1F2640; background-color:#1F2640;">
        <div class="container">
            <div class="row" >
                <div class="col-md-12">
                    <div class="navbar-collapse collapse ">
                        <ul id="menu-top" class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Category", "Categories", "Categories")</li>
                            <li>@Html.ActionLink("Post", "Contents", "Content")</li>
                            <li>@Html.ActionLink("Add Post", "AddContent", "Content")</li>
                            <li>@Html.ActionLink("Deleted Posts","LogContent","Content")</li>
                            <li>@Html.ActionLink("Updated Categories","LogCategory","Categories")</li>
                            <li>@Html.ActionLink("Comments","Comment","Comment")</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- MENU SECTION END-->
    <div id="main">
        @RenderBody()
    </div>
    <!-- CONTENT-WRAPPER SECTION END-->
    <footer style="color:#1F2640; background-color:#1F2640;">
        <div class="container">
            <div class="row">
            </div>
        </div>
    </footer>
    <!-- FOOTER SECTION END-->
    <!-- JAVASCRIPT AT THE BOTTOM TO REDUCE THE LOADING TIME  -->
    <!-- CORE JQUERY SCRIPTS -->
    <script src="~/Content/assets/js/jquery-1.11.1.js"></script>
    <!-- BOOTSTRAP SCRIPTS  -->
    <script src="~/Content/assets/js/bootstrap.js"></script>
</body>
</html>
