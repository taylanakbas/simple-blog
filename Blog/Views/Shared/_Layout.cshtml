<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <link href="~/Content/images/favicon.ico" rel="icon" />
    @Styles.Render("~/bundles/layout/css")
</head>



<body class="is-preload">
    <div class="container">
        <!-- Wrapper -->
        <div id="wrapper">
            <!-- Header -->
            <header id="header" class="alt">
                <a href="@Url.Action("HomePage","Home")" class="logo"><strong>Somewhere</strong> <span>In The Box</span></a>
                <nav>
                    <a href="#menu">Menu</a>
                </nav>
            </header>
            <!-- Menu -->
            <nav id="menu">
                <ul class="links">
                    <li>
                        @Html.ActionLink("Homepage", "HomePage", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Categories", "Categories", "Category")
                    </li>
                </ul>
                <ul class="actions stacked">
                    <li class="button primary fit">
                        <a href="http://localhost:63777/Home/LogIn">Sign-In</a>
                    </li>
                    <li>
                        Mood of the Week
                        <iframe src="https://open.spotify.com/embed?uri=spotify:track:2iUGkN0SMYUSLYALYy8BtU" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                    </li>
                </ul>
            </nav>
            <!-- Main -->
            <div id="main">
                @RenderBody()
            </div>
        </div>
    </div>
    
